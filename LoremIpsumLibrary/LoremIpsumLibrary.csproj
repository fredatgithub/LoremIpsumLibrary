<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<!-- Multi-target -->
		<TargetFrameworks>net48;net8.0</TargetFrameworks>

		<!-- NuGet metadata -->
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageId>LoremIpsumLibrary</PackageId>
		<Version>1.0.0</Version>
		<Authors>Freddy Juhel</Authors>
		<Company>Freddy Juhel</Company>
		<Description>Library to generate Lorem Ipsum text.</Description>
		<PackageTags>lorem ipsum text generator</PackageTags>
		<RepositoryUrl>https://github.com/tonrepo/LoremIpsumLibrary</RepositoryUrl>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>

		<!-- Assemblies -->
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- Symbol package -->
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<LangVersion>latest</LangVersion>
		<PlatformTarget>x64</PlatformTarget>
	</PropertyGroup>

</Project>
